{
    "name": "checksync",
    "version": "1.0.0",
    "description": "A tool that allows code to be annotated across different files to ensure they remain in sync.",
    "main": "dist/cli.js",
    "bin": {
        "checksync": "./bin/checksync.js"
    },
    "keywords": [
        "lint",
        "linter",
        "synchronize",
        "sync",
        "synchronise",
        "checksum"
    ],
    "bugs": {
        "url": "https://github.com/somewhatabstract/checksync/issues"
    },
    "repository": "https://github.com/somewhatabstract/checksync",
    "author": "Jeff Yates <jeff@somewhatabstract.com>",
    "license": "MIT",
    "private": false,
    "engines": {
        "node": ">= 8"
    },
    "files": [
        "bin/checksync.js",
        "dist"
    ],
    "dependencies": {},
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-flow": "^7.0.0",
        "@babel/register": "^7.5.5",
        "adler-32": "^1.2.0",
        "ancesdir": "^1.1.0",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.9.0",
        "babelrc-rollup": "^3.0.0",
        "chalk": "^2.4.2",
        "codecov": "^3.5.0",
        "eslint": "^6.2.2",
        "eslint-plugin-flowtype": "^4.2.0",
        "fast-glob": "^3.0.4",
        "flow-bin": "^0.111.0",
        "flow-typed": "^2.6.1",
        "jest": "^24.9.0",
        "jest-extended": "^0.11.2",
        "jest-worker": "^24.9.0",
        "lodash": "^4.17.15",
        "micromatch": "^4.0.2",
        "minimist": "^1.2.0",
        "parse-gitignore": "^1.0.1",
        "pre-commit": "^1.2.2",
        "prettier": "1.19.1",
        "pretty-quick": "^2.0.0",
        "rollup": "^1.21.0",
        "rollup-plugin-analyzer": "^3.1.2",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-babel-minify": "^9.0.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-visualizer": "^2.6.0"
    },
    "resolutions": {
        "babel-eslint/eslint-scope": "^5.0.0"
    },
    "scripts": {
        "prepublishOnly": "yarn clean && yarn test && yarn build",
        "flow:ci": "flow check",
        "clean": "rm -rf dist && rm -rf obj",
        "build": "yarn test && rollup -c",
        "test": "jest --colors --config jest.config.js --testPathIgnorePatterns integration_test.js",
        "test:integration": "jest --colors --config jest.config.js integration_test.js",
        "test:all": "jest --colors --config jest.config.js",
        "coverage": "jest --colors --config jest.config.js --coverage --testPathIgnorePatterns integration_test.js",
        "coverage:integration": "jest --colors --config jest.config.js --coverage integration_test.js",
        "coverage:all": "jest --colors --config jest.config.js --coverage",
        "pretty-quick": "pretty-quick --staged",
        "lint": "flow && eslint --report-unused-disable-directives --config .eslintrc.json '{src,bin,__{tests,mocks}__}/**/*.js'"
    },
    "pre-commit": [
        "pretty-quick",
        "lint",
        "test:all"
    ]
}