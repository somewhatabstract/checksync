{
    "env": {
        "node": true,
        "browser": false,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": [
        "flowtype",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    },
    "rules": {
        "no-unused-vars": [
            2,
            {
                "args": "none",
                "varsIgnorePattern": "^_*$"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        // prettier
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "trailingComma": "all",
                "bracketSpacing": false
            }
        ]
    }
}